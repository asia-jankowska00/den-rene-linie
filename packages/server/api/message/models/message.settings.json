{
  "kind": "collectionType",
  "collectionName": "messages",
  "info": {
    "name": "Message"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "sender": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "receiver": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "text": {
      "type": "richtext",
      "required": true
    },
    "created": {
      "type": "datetime"
    }
  }
}
